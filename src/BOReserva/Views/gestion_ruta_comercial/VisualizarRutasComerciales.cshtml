
﻿@model  List<BOReserva.Models.gestion_ruta_comercial.CRuta>

<script src="~/Scripts\Scripts_Rutas\llamadas_generales_ruta.js"></script>

<div class="row">
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Rutas</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Tipo</th>
                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Distancia</th>
                            <th>Status</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                                                @try
                                                {
                                                    foreach (BOReserva.Models.gestion_ruta_comercial.CRuta item in Model)
                                                    {
                                                        //String disponibilidad;
                                                        //if (item._disponibilidad == 1) { disponibilidad = "Disponible"; } else { disponibilidad = "No disponible"; }

                                                        <tr id="@item.idRuta">
                                                            <td>@item.tipoRuta</td>
                                                            <td>@item.origenRuta</td>
                                                            <td>@item.destinoRuta</td>
                                                            <td>@item.distanciaRuta KM</td>
                                                            <td>@item.estadoRuta</td>
                                                            <td>
                                                                <a href="#"> <i class="fa fa-eye m03DetalleRutas"></i></a>
                                                                <a href="#"><i class="fa fa-pencil m03EditarRutas"></i></a>
                                                                @if (item.estadoRuta == "Activa")
                                                                {
                                                                    <a href="#" title="Deshabilitar"><i class="fa fa-toggle-on desactivar"></i></a>
                                                                }
                                                                else
                                                                {
                                                                    <a href="#" title="Habilitar"><i class="fa fa-toggle-off activar"></i></a>
                                                                }
                                                            </td>
                                                            </tr>
                                                    }
                                                }
                                                catch
                                                {
                                                    
                                                }
<tfoot>
                        <tr>
                            <th>Tipo</th>
                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Distancia</th>
                            <th>Status</th>
                            <th>Opciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

<script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/plugins/datatables/dataTables.bootstrap.min.js"></script>

<script language="javascript" type="text/javascript">
    table = $('#example1').DataTable();
</script>