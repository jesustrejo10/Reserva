<body class="hold-transition login-page" style="background: url(../../Content/dist/img/travelling.jpg) no-repeat center center fixed">



    <div class="login-box">

        <div class="login-logo">

            <img src="../../Content/dist/img/logo_final1.png" alt="Logo Reserva" align="middle" />

        </div>


        <!-- INICIO DE LA FORMA LOGIN-->
        <div class="login-box-body">
            <p class="login-box-msg">Iniciar Sesión</p> 

            <form method="post">

                              
                   @if (@TempData["CorreoVacio"] != null || @TempData["ContraseñaVacio"]!= null)
                   {

                        <p class="box-title">Correo</p>

                        <p style="color:red">@TempData["CorreoVacio"]</p>

                        <div class="form-group has-feedback">
                          @if (TempData["CorreoVacio"] != null)
                          {
                          <input type="email" style="border-color:red" name="correo" class="form-control" placeholder="alex@reserva.com" value="@TempData["Correo"]" oninvalid="this.setCustomValidity('Debe colocar un correo valido')" oninput="setCustomValidity('')">
                          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                          }
                          else
                          {
                            <input type="email" name="correo" class="form-control" placeholder="alex@reserva.com" oninvalid="this.setCustomValidity('Debe colocar un correo valido')" oninput="setCustomValidity('')">
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>

                          }
                        </div>
                       
                        <p class="box-title">Contraseña</p>
                        <p style="color:red">@TempData["ContraseñaVacio"]</p>
                        <div class="form-group has-feedback">
                         @if (TempData["ContraseñaVacio"] != null)
                         {
                          <input type="password" style="border-color:red" name="contraseña" class="form-control" placeholder="**********">
                          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                         }
                         else
                         {
                            <input type="password" name="contraseña" class="form-control" placeholder="**********">
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                         }
                        </div>
                   }
                   else
                     {
                         <p style="color:red">@TempData["Mensaje"]</p>
                         <p class="box-title">Correo</p>
                           <div class="form-group has-feedback">
                               <input type="email" name="correo" class="form-control" placeholder="alex@reserva.com" oninvalid="this.setCustomValidity('Debe colocar un correo valido')" oninput="setCustomValidity('')">
                             <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                           </div>

                         <p class="box-title">Contraseña</p>
                         <div class="form-group has-feedback">
                           <input type="password" name="contraseña" class="form-control" placeholder="**********">
                           <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                         </div>
                       }

                


                <div class="row">

                    <!-- /.col -->
                    <div class="col-xs-6">
                        <button type="submit" class="btn btn-success" style="margin-left:108px;">Iniciar Sesión</button>
                    </div>
                    <!-- /.col -->
                </div>

            </form>

            <!--<a href="/gestion_seguridad_ingreso/M01_RecuperarContrasenna" style="margin-left:86px;">¿Olvidaste tu contraseña?</a><br>-->

           
        </div>
        <!-- /.login-box-body -->
       
    </div>

    <!-- FIN DE LA FORMA LOGIN -->
