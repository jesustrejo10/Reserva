</div>
<!-- /.row -->
<div class="row">
    <div class="col-md-8">
        <div class="box box-danger collapsed-box">
            <div class="box-header with-border">
                <h1 class="box-title"> Consultar fallos por avión</h1>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-xs-8">
                            <label for="matriculaAvionConsultaFallo">Inserte la matricula del Avión:</label>
                            <input type="text" class="form-control" id="matriculaAvionConsultaFallo">
                        </div>
                        <div class="col-xs-4">
                            <button type="button" class="btn btn-success" style="margin-top: 25px;">Consultar</button>
                        </div>
                        <div class="col-xs-12">
                            <label for="codigosError">Codigos de error encontrados asociados al avión:</label>
                            <textarea class="form-control" rows="10" id="codigosError"></textarea>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<!-------------------- FIN DE LA SECCION DE FALLOS -------------->


