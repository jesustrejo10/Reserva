<!-- Indico que para esta vista, M08_AgregarAutomovil, utilizare el modelo Models/gestion_automoviles/CAgregarAutomovil-->
@model BOReserva.Models.gestion_automoviles.CAgregarAutomovil

<!--Indico que, estoy abriendo un formulario que tendra como accion del submit, el controlador gestion_automoviles"Controller", 
    utilizara el metodo guardarAutomovil
    le pasara la informacion mediante un POST-->

@using (Html.BeginForm("saveVehicle", "gestion_automoviles", null, FormMethod.Post, new { @id = "formSaveVehicle", @class = "form-horizontal" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h1 class="box-title"> Agregar automóvil</h1>
                    <div class="box-tools pull-right">
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-xs-4">
                                <label for="placa">Placa del vehiculo</label>
                                @Html.TextBoxFor(m => m._matricula, null, new { @class = "form-control", @placeholder = "Placa", @id = "vehi_placa" })
                            </div>
                            <div class="col-xs-4">
                                <label for="modelo">Fabricante</label>
                                @{
                                    List<SelectListItem> _fabricante = new List<SelectListItem>();
                                    _fabricante.Add(new SelectListItem
                                    {
                                        Text = "",
                                        Value = ""
                                    });
                                    _fabricante.Add(new SelectListItem
                                         {
                                             Text = "Mazda",
                                             Value = "Mazda"
                                         });
                                    _fabricante.Add(new SelectListItem
                                         {
                                             Text = "Jeep",
                                             Value = "Jeep",
                                         });
                                    _fabricante.Add(new SelectListItem
                                         {
                                             Text = "Ford",
                                             Value = "Ford"
                                         });
                                }
                                @Html.DropDownListFor(m => m._fabricante, _fabricante, new { @class = "form-control", @placeholder = "Marca", @id = "vehi_marca" })

                            </div>
                            <div class="col-xs-4">
                                <label for="modelo">Modelo</label>                                
                                @Html.TextBoxFor(m => m._modelo, null, new { @class = "form-control", @placeholder = "Marca", @id = "vehi_modelo" })
                            </div>
                        </div>
                        <div>&nbsp;</div>
                        <div class="col-md-12">
                            <div class="col-xs-4">
                                <label for="anio">Año de fabricacion</label>
                                @Html.DropDownListFor(m => m._anio, BOReserva.Controllers.gestion_automovilesController.GetDropDownListForYears(), new { @class = "form-control", @placeholder = "Placa", @id = "vehi_modelo" })
                            </div>
                            <div class="col-xs-4">
                                <label for="tipo">Tipo</label>
                                @{
                                    List<SelectListItem> _tipos = new List<SelectListItem>();
                                    _tipos.Add(new SelectListItem
                                    {
                                        Text = "",
                                        Value = ""
                                    });
                                    _tipos.Add(new SelectListItem
                                         {
                                             Text = "Sedan",
                                             Value = "Sedan"
                                    });
                                    _tipos.Add(new SelectListItem
                                    {
                                        Text = "Familiar",
                                        Value = "Familiar"
                                    });
                                    _tipos.Add(new SelectListItem
                                    {
                                        Text = "Deportivo",
                                        Value = "Deportivo"
                                    });
                                    _tipos.Add(new SelectListItem
                                    {
                                        Text = "Minivan",
                                        Value = "Minivan"
                                    });
                                    _tipos.Add(new SelectListItem
                                    {
                                        Text = "Todoterreno",
                                        Value = "Todoterreno"
                                    });
                                    _tipos.Add(new SelectListItem
                                    {
                                        Text = "Camioneta",
                                        Value = "Camioneta"
                                    });
                                }
                                @Html.DropDownListFor(m => m._tipovehiculo, _tipos, new { @class = "form-control", @placeholder = "Tipo", @id = "vehi_tipo" })
                            </div>
                            <div class="col-xs-4">
                                <label for="capacidad">Capacidad</label>
                                @Html.DropDownListFor(m => m._cantpasajeros, BOReserva.Controllers.gestion_automovilesController.cantidadpasajeros() , new { @class = "form-control", @placeholder = "Tipo", @id = "vehi_cantidad" })            
                            </div>
                        </div>
                        <div>&nbsp;</div>
                        <div class="col-md-12">
                            <div class="col-xs-4">
                                <label for="color">Color</label>
                                @{
                                    List<SelectListItem> _color = new List<SelectListItem>();
                                    _color.Add(new SelectListItem
                                    {
                                        Text = "",
                                        Value = ""
                                    });
                                    _color.Add(new SelectListItem
                                         {
                                             Text = "Azul",
                                             Value = "Azul"
                                         });
                                    _color.Add(new SelectListItem
                                    {
                                        Text = "Negro",
                                        Value = "Negro"
                                    });
                                    _color.Add(new SelectListItem
                                    {
                                        Text = "Blanco",
                                        Value = "Blanco"
                                    });
                                    _color.Add(new SelectListItem
                                    {
                                        Text = "Rojo",
                                        Value = "Rojo"
                                    });
                                    _color.Add(new SelectListItem
                                    {
                                        Text = "Gris",
                                        Value = "Gris"
                                    });
                                    _color.Add(new SelectListItem
                                    {
                                        Text = "Verde",
                                        Value = "Verde"
                                    });
                                }
                                @Html.DropDownListFor(m => m._tipovehiculo, _color, new { @class = "form-control", @placeholder = "Color", @id = "vehi_color" })
                            </div>
                            <div class="col-xs-4">
                                <label for="kilometraje">Kilometraje</label>
                                @Html.TextBoxFor(m => m._kilometraje, null, new { @type="number", @class = "form-control", @placeholder = "Kilometraje", @id = "vehi_modelo" })
                            </div>
                            <div class="col-xs-4">
                                <label for="fecharegistro">Fecha de registro</label>
                                @Html.TextBoxFor(m => m._fecharegistro, null, new { @type = "date", @class = "form-control", @placeholder = "Kilometraje", @id = "vehi_registro" })
                            </div>
                        </div>
                        <div>&nbsp;</div>
                        <div class="col-md-12">
                            <div class="col-xs-4">
                                <label for="">Pais</label>
                                @{
                                    List<SelectListItem> _pais = new List<SelectListItem>();
                                    _pais.Add(new SelectListItem
                                    {
                                        Text = "",
                                        Value = ""
                                    });
                                    _pais.Add(new SelectListItem
                                    {
                                        Text = "Venezuela",
                                        Value = "Venezuela"
                                    });
                                    _pais.Add(new SelectListItem
                                    {
                                        Text = "Estados Unidos",
                                        Value = "USA"
                                    });
                                }
                                @Html.DropDownListFor(m => m._pais, _pais, new { @class = "form-control", @placeholder = "Pais", @id = "vehi_pais" })

                            </div>
                            <div class="col-xs-4">
                                <label for="estado">Estado</label>
                                    @{
                                        List<SelectListItem> _estado = new List<SelectListItem>();
                                        _estado.Add(new SelectListItem
                                        {
                                            Text = "",
                                            Value = ""
                                        });
                                        _estado.Add(new SelectListItem
                                        {
                                            Text = "Miranda",
                                            Value = "Miranda"
                                        });
                                        _estado.Add(new SelectListItem
                                        {
                                            Text = "Texas",
                                            Value = "Texas"
                                        });
                                    }
                                    @Html.DropDownListFor(m => m._estado, _estado, new { @class = "form-control", @placeholder = "Estado", @id = "vehi_estado" })
                                </div>
                            <div class="col-xs-4">
                                <label for="Ciudad">Ciudad</label>
                                @{
                                        List<SelectListItem> _ciudad = new List<SelectListItem>();
                                        _ciudad.Add(new SelectListItem
                                        {
                                            Text = "",
                                            Value = ""
                                        });
                                        _ciudad.Add(new SelectListItem
                                        {
                                            Text = "Los Teques",
                                            Value = "Teques"
                                        });
                                        _ciudad.Add(new SelectListItem
                                        {
                                            Text = "Dallas",
                                            Value = "Dallas"
                                        });
                                }
                                @Html.DropDownListFor(m => m._ciudad, _ciudad, new { @class = "form-control", @placeholder = "Ciudad", @id = "vehi_ciudad" })
                            </div>
                        </div>
                        <div>&nbsp;</div>
                        <div class="col-md-12">
                            <div class="col-xs-4">
                                <label for="transmision">Transmision:</label>
                                @{
                                        List<SelectListItem> _transmision = new List<SelectListItem>();
                                        _transmision.Add(new SelectListItem
                                        {
                                            Text = "",
                                            Value = ""
                                        });
                                        _transmision.Add(new SelectListItem
                                        {
                                            Text = "Automatica",
                                            Value = "Automatica"
                                        });
                                        _transmision.Add(new SelectListItem
                                        {
                                            Text = "Secuencial",
                                            Value = "Secuencial"
                                        });
                                        _transmision.Add(new SelectListItem
                                        {
                                            Text = "Sincronica",
                                            Value = "Sincronica"
                                        });
                                }                                
                                @Html.DropDownListFor(m => m._transmision, _transmision, new { @class = "form-control", @placeholder = "Ciudad", @id = "vehi_transmision" })
                            </div>
                            <div class="col-xs-4">
                                <label for="preciocompra">Precio de por la compra ($):</label>
                                @Html.TextBoxFor(m => m._preciocompra, null, new { @type = "number", @class = "form-control", @placeholder = "Dolares", @id = "vehi_compra" })
                            </div>
                            <div class="col-xs-4">
                                <label for="tarifa">Tarifa diaria ($):</label>
                                @Html.TextBoxFor(m => m._precioalquiler, null, new { @type = "number", @class = "form-control", @placeholder = "Dolares", @id = "vehi_tarifa" })
                            </div>
                        </div>
                        <div>&nbsp;</div>
                        <div class="col-md-12" style="margin-top:10px;">
                            <div class="col-xs-4">
                                <label for="penalidad">Penalidad diaria ($):</label>
                                @Html.TextBoxFor(m => m._penalidaddiaria, null, new { @type = "number", @class = "form-control", @placeholder = "Dolares", @id = "vehi_penalidad" })
                            </div>   
                        </div>
                        <div class="col-md-12" style="margin-top:10px;">
                            <button type="button" id="save_vehicle" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Guardar</button>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>

    <script>
        $("#save_vehicle").click(function (e) {
            e.preventDefault();
            var form = $("#formSaveVehicle");
            $.ajax({
                url: "gestion_automoviles/saveVehicle",
                data: form.serialize(),
                type: 'POST',
                success: function (data) {
                    alert("Se guardo");
                    $('#formSaveVehicle')[0].reset();
                }
            });
        });

      
    </script>
    
    

}
