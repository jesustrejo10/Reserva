

<div class="row">
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Automoviles</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Matricula</th>
                            <th>Marca / Modelo</th>
                            <th>Clase / Capacidad</th>
                            <th>Tipo / Color </th>
                            <th>Disponibilidad / Tarifa</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try{
                            foreach (var item in Model)
                            {
                                String disponibilidad;
                                if (item._disponibilidad == 1) { disponibilidad = "Disponible";} else { disponibilidad = "No disponible";}
                                
                                <tr id="@item._matricula">
                                    <td>@item._matricula</td>
                                    <td>@item._fabricante / @item._modelo</td>
                                    <td>@item._tipovehiculo / @item._cantpasajeros</td>
                                    <td>@item._transmision / @item._color</td>
                                    <td>@disponibilidad / @item._precioalquiler USD</td>
                                    <td>
                                        <a href="#"> <i class="fa fa-eye clasedeprueba"></i></a>
                                        <a href="#"><i class="fa fa-gear modificar"></i></a>
                                        <a href="#"><i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                            }
                        }catch {
                            
                        }
                        
                    <tfoot>
                        <tr>
                            <th>Matricula</th>
                            <th>Marca / Modelo</th>
                            <th>Clase / Capacidad</th>
                            <th>Tipo / Color </th>
                            <th>Disponibilidad / Tarifa</th>
                            <th>Opciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
