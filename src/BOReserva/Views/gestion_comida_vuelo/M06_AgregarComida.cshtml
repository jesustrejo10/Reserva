@model BOReserva.Models.gestion_comida_vuelo.CAgregarComida
<script src="~/Scripts/Scripts_ComidaVuelo/llamadas_generales.js"></script>
@using (Html.BeginForm("guardarPlato", "gestion_comida_vuelo", null, FormMethod.Post, new { @id = "formGuardarPlato", @class = "form-horizontal" }))
{

      
<div class="row">
    <!-- Agregar Comida  -->
    <div class="col-xs-6"> 
        <div class="box-header with-border">
            <h1 class="box-title"> Agregar Comida-Bebida</h1>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-12">
                        <label for="nombrePlato">Nombre del Plato (<span style="color:red">*</span>):</label>
                         @Html.TextBoxFor(m => m._nombrePlato, null, new { @class = "form-control", @placeholder = "Pasta Carbonara", @id = "nombrePlato" })
                        <label for="descripcionPlato">Descripcion (<span style="color:red">*</span>):</label>
                        @Html.TextBoxFor(m => m._descripcionPlato,null, new { @class = "form-control", @placeholder = "Descripcion del Plato", @id = "descripcionPlato" })
                         </div>
                </div>
                <!-- /.box-body -->
            </div>
    </div>
   
    </div>
    <div class="col-xs-6">
        <div class="box-header with-border">
            <h1 class="box-title"></h1>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-12">
                        <label for="tipoPlato">Tipo (<span style="color:red">*</span>):</label>
                        @{
                                List<SelectListItem> _tipoPlato = new List<SelectListItem>();
                                _tipoPlato.Add(new SelectListItem
                                {
                                    Text = "Seleccione Uno",
                                    Value = "Seleccione uno"
                                });
                                _tipoPlato.Add(new SelectListItem
                                     {
                                         Text = "Comida",
                                         Value = "Comida"
                                     });
                                _tipoPlato.Add(new SelectListItem
                                     {
                                         Text = "Bebida",
                                         Value = "Bebida",
                                     });
                            }
                            @Html.DropDownListFor(m => m._tipoPlato, _tipoPlato, new { @class = "form-control", @placeholder = "Tipo ", @id = "tipoPlato" })
                         </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
    <!-- Fin Agregar Comida  -->
    
    <!-- Botón Guardar -->
    <div>&nbsp;</div>
    <div class="col-md-12" style="margin-top:10px;">
        <button type="button" id="aceptarPlato" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Guardar</button>
    </div>

