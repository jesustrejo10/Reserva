@model BOReserva.Models.gestion_ofertas.CVisualizarOferta

<!--Indico que, estoy abriendo un formulario que tendra como accion del submit, el controlador gestion_automoviles"Controller",
    utilizara el metodo guardarAutomovil
    le pasara la informacion mediante un POST-->
@using (Html.BeginForm("viewOferta", "gestion_ofertas", null, FormMethod.Post, new { @id = "viewOferta", @class = "form-horizontal" }))
{
<!-----------------SECCION CONSULTAR OFERTA-------------------->
<div class="row">
    <div class="col-md-12">
        <div class="box box">
            <div class="box-header with-border">
                <h1 class="box-title"> Consultar Oferta</h1>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">

                    <div class="col-md-12" style="margin-top: 25px">

                        <div class="col-xs-6">
                            <label>Nombre de la Oferta</label>
                            @Html.TextBoxFor(m => m._nombreOferta, null, new { @class = "form-control", @placeholder = "", @id = "nombreOferta", @disabled = "disabled", @readonly = "readonly" })
                        </div>

                    </div>

                    <div class="col-md-12" style="margin-top: 25px">

                        <div class="col-xs-6">
                            <label>Fecha Inicio:</label>
                            @Html.TextBoxFor(m => m._fechaIniOferta, null, new { @class = "form-control", @placeholder = "", @id = "fechaIniOferta", @disabled = "disabled", @readonly = "readonly" })

                        </div>

                        <div class="col-xs-6">
                            <label>Fecha Fin:</label>
                            @Html.TextBoxFor(m => m._fechaFinOferta, null, new { @class = "form-control", @placeholder = "", @id = "fechaFinOferta", @disabled = "disabled", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="col-md-12" style="margin-top: 25px">

                        <div class="col-xs-6">
                            <label>Porcentaje de Oferta</label>
                            @Html.TextBoxFor(m => m._porcentajeOferta, null, new { @class = "form-control", @placeholder = "", @id = "porcentajeOferta", @disabled = "disabled", @readonly = "readonly" })
                        </div>

                        <div class="col-xs-6">
                            <label>Estado de la Oferta</label>
                            @Html.TextBoxFor(m => m._estadoOferta, null, new { @class = "form-control", @placeholder = "", @id = "estadoOferta", @disabled = "disabled", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-top: 25px">
                        <div class="box-body" style="margin-top: 25px">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Paquetes a realizar Descuento</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @try
                                    {
                                        List<String> listaPaquetes = new List<String>();
                                        String nombre = Model._nombrePaquete;
                                        string[] words = nombre.Split('\n');
                                        foreach (string item in words)
                                        {
                                            <tr id="nombresPaquetes">
                                                <td>@item</td>
                                            </tr>
                                        }
                                    }
                                    catch
                                    {

                                    }
                            </table>
                        </div>
                    </div>

                        <div class="col-md-12" style="margin-top: 25px">
                            <div class="col-md-12" style="margin-top:10px;">
                                <button type="button" id="return" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Regresar</button>
                            </div>
                        </div>

                        <!-- /.col -->
                    </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
    <script>
        $("#return").click(function (e) {
            e.preventDefault();
            var url = '/gestion_ofertas/M11_VisualizarOferta';
            var method = 'GET';
            var data = '';

            $.ajax(
                {
                    url: url,
                    type: method,
                    data: data,
                    success: function (data, textStatus, jqXHR) {

                        $("#contenido").empty();
                        $("#contenido").append(data);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });
        });
    </script>
}
<!-----------------FIN SECCION CONSULTAR OFERTA-------------------->
