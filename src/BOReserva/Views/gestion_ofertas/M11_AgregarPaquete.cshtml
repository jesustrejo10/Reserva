                    alert('Los elementos deben tener fecha inicio y fecha fin!');
                    return false;
                }
            }
            return true;
        }

        //Valida que el usuario haya agregado al menos un item al paquete
        function validarAlMenosUno() {
            if ($("#cbAuto").val() != "00") {
                    return true;
            }
            if ($("#cbRest").val() != "00") {
                    return true;
            }
            if ($("#cbHab").val() != "00") {
