        //Valida que existan fecha inicio y fin del item seleccionado
        function validarEstarFechas() {
            if ($("#cbAuto").val() != "00") {
                if (($("#fechaIniAuto").val() == "") || ($("#fechaFinAuto").val() == "")) {
                    alert('Los elementos deben tener fecha inicio y fecha fin!');
