@model BOReserva.Models.gestion_restaurantes.CRestauranteModelo

<script src="~/Scripts/Scripts_Restaurantes/llamadas_generales.js"></script>
<link href="@Url.Content("~/Scripts/select2/css/select2.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/select2/js/select2.min.js")"></script>

<script type="text/javascript">
$(document).ready(function() {
    $("#M10BOciudadDropdown").select2();
});
</script>


<!---------------------- SECCION DE MODIFICAR RESTAURANTE ---------------->
@using (Html.BeginForm("modificarRestaurante", "gestion_restaurantes", null, FormMethod.Post, new { @id = "formModificarRestaurante", @class = "form-horizontal" }))
{

    <div class="row">
        <div class="col-md-10">
            <div class="Cajita">

                <div class="box-body">
                    <h2 class="box-title"> Agregar Restaurante</h2>
                    <div class="row">
                        <div class="col-md-12">

                            <div>
                                &nbsp;
                                <div class="col-md-12">
                                    <!-- Nombre del Restaurant-->
                                    <div class="col-xs-6">
                                        <label for="nombre">Nombre del Restaurante(<span style="color:red">*</span>):</label>

                                        @Html.TextBox("Nombre", "", new { @class = "form-control", @type = "text", @placeholder = "Introduzca nombre e.g:Sabor y Sazon" })

                                    </div>
                                    <!-- Descripcion del Restaurant-->
                                    <div class="col-xs-6">
                                        <label for="descripcion">Descripción del Restautante:</label>
                                        @Html.TextBox("Descripcion", "", new { @class = "form-control", @type = "text", @placeholder = "Introduzca Descripcion e.g: Disfrute de la mejor comida criolla" })
                                    </div>
                                </div>
                            </div>

                            <div>
                                &nbsp;
                                <div class="col-md-12">
                                    <!-- Direccion del Restaurant-->
                                    <div class="col-xs-6">
                                        <label for="direccion">Dirección(<span style="color:red">*</span>):</label>
                                        @Html.TextBox("Direccion", "", new { @class = "form-control", @type = "text", @placeholder = "Introduzca Direccion e.g: 1362 La Vista NE, Atlanta GA" })
                                    </div>

                                    <!-- Telefono del Restaurant-->
                                    <div class="col-xs-6">
                                        <label for="Telefono">
                                            Telefono(<span style="color:red">*</span>):

                                        </label>
                                        @Html.TextBox("Telefono", "", new { @class = "form-control", @type = "text", @placeholder = "Introduzca teléfono e.g: 0212-9774183", @maxlength = "12" })

                                    </div>

                                </div>
                            </div>

                            <div>
                                &nbsp;
                                <div class="col-md-12">

                                    <!-- Lista ciudad del Restaurant-->
                                    <div class="col-xs-6">
                                        <label for="ciudad">Ciudad(<span style="color:red">*</span>):</label>
                                        @Html.DropDownList("ComboLugar", ViewBag.Ciudad as SelectList, "Ciudades", new { @class = "form-control" })
                                    </div>

                                    <!-- Hora de apertura del Restaurant-->
                                    <div class="col-xs-6">
                                        <label for="horarioApertura">Hora Apertura(<span style="color:red">*</span>):</label>
                                        @Html.DropDownList("ComboHoraIni", ViewBag.Horarios as SelectList, "Horario Inicio", new { @class = "form-control" })
                                    </div>

                                </div>
                            </div>

                            <div>
                                &nbsp;
                                <div class="col-md-12">
                                    <!-- Hora de cierre del Restaurant-->
                                    <div class="col-xs-6">
                                        <label for="horarioCierre">Hora Cierre(<span style="color:red">*</span>):</label>
                                        @Html.DropDownList("ComboHoraFin", ViewBag.Horarios as SelectList, "Horario Fin", new { @class = "form-control" })
                                    </div>

                                </div>
                            </div>
                            &nbsp;
                            <div class="col-md-12" style="margin-top:10px;">
                                <div class="col-xs-6">
                                    <button type="button" id="aceptarRestauranteModificacion" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Guardar</button>
                                </div>
                                <div class="col-xs-6">
                                    <button id="cancelarRestauranteModificacion" type="button" class="btn btn-danger" style="display:block; margin-left:auto; margin-right:auto;">Cancelar</button>

                                </div>
                            </div>
                            
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
}
<!------------------- FIN DE SECCION DE MODIFICAR RESTAURANTE ---------------->
