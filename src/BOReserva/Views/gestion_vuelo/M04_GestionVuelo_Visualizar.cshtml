@model List<BOReserva.DataAccess.Domain.Entidad>

<script src="~/Scripts/Scripts_Vuelos/llamadas_generales_Vuelos.js"></script>

<div class="row">
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Vuelos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Codigo Vuelo</th>
                            <th>Ciudad Origen</th>
                            <th>Ciudad Destino</th>
                            <th>Fecha Despegue</th>
                            <th>Fecha Aterrizaje </th>
                            <th>Status</th>
                            <th>Avion</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                            @foreach (BOReserva.DataAccess.Domain.Vuelo i in Model)
                            {
                              
                                <tr id="@i._id">
                                    <td>@i.CodigoVuelo</td>
                                    <td>@i.getRuta.origenRuta</td>
                                    <td>@i.getRuta.destinoRuta</td> 
                                    <td>@i.FechaDespegue.ToString("g")</td>
                                    <td>@i.FechaAterrizaje.ToString("g")</td>
                                    <td>@i.StatusVuelo</td>
                                    <td>@i.getAvion._modelo</td>
                                    <td>
                                        <a href="#"> <i class="fa fa-eye mostrar"></i></a>
                                        <a href="#"><i class="fa fa-gear modificar"></i></a>
                                        @{
                                            if (i.StatusVuelo == "activo")
                                            {
                                                <a href="#" title="Activar/Desactivar vuelo"><i class="fa fa-toggle-on desactivar"></i></a>
                                            }
                                            if (i.StatusVuelo == "inactivo")
                                            {
                                                <a href="#" title="Activar/Desactivar vuelo"><i class="fa fa-toggle-off activar"></i></a>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        

                    <tfoot>
                        <tr>
                            <th>Codigo Vuelo</th>
                            <th>Ciudad Origen</th>
                            <th>Ciudad Destino</th>
                            <th>Fecha Despegue</th>
                            <th>Fecha Aterrizaje </th>
                            <th>Status</th>
                            <th>Avion</th>
                            <th>Opciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
             <!-- .box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

<script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/plugins/datatables/dataTables.bootstrap.min.js"></script>


<script language="javascript" type="text/javascript">
  
    table = $('#example1').DataTable();



</script>


