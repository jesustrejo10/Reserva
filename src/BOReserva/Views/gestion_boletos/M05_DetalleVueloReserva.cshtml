<!-- Indico que para esta vista, M05_VisualizarBoleto, utilizare el modelo Models/gestion_boletos/CVisualizarBoleto-->
@model BOReserva.Models.gestion_boletos.CVisualizarBoleto

@using (Html.BeginForm("verBoleto", "gestion_boletos", null, FormMethod.Post, new { @id = "verBoleto", @class = "form-horizontal" }))
{

    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h1 class="box-title">Detalle Vuelo</h1>
                    <div class="box-tools pull-right">
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12" style="margin-top:10px;">

                            <div class="col-xs-6">
                                <label>Origen:</label>
                                @Html.TextBoxFor(m => m._origen, null, new { @class = "form-control", @placeholder = "", @id = "boleto_origen", @disabled = "disabled", @readonly = "readonly" })
                            </div>

                            <div class="col-xs-6">
                                <label>Destino:</label>
                                @Html.TextBoxFor(m => m._destino, null, new { @class = "form-control", @placeholder = "", @id = "boleto_destino", @disabled = "disabled", @readonly = "readonly" })
                            </div>

                        </div>

                        <div>&nbsp;</div>

                        <div class="col-md-12" style="margin-top:10px;">
                            <div class="col-md-6">
                                <label>Fecha salida (IDA):</label>
                                @Html.TextBoxFor(m => m._fechaDespegueIda, null, new { @class = "form-control", @placeholder = "", @id = "boleto_fechaDespegueIda", @disabled = "disabled", @readonly = "readonly" })
                            </div>

                            <div class="col-md-6">
                                <label>Fecha llegada (IDA):</label>
                                @Html.TextBoxFor(m => m._fechaAterrizajeIda, null, new { @class = "form-control", @placeholder = "", @id = "boleto_fechaAterrizajeIda", @disabled = "disabled", @readonly = "readonly" })
                            </div>

                        </div>

                        <div>&nbsp;</div>

                        <div class="col-md-12" style="margin-top:10px;">

                            <div class="col-md-6">
                                <label>Hora salida (IDA):</label>
                                @Html.TextBoxFor(m => m._horaDespegueIda, null, new { @class = "form-control", @placeholder = "", @id = "boleto_horaDespegueIda", @disabled = "disabled", @readonly = "readonly" })
                            </div>

                            <div class="col-md-6">
                                <label>Hora llegada (IDA):</label>
                                @Html.TextBoxFor(m => m._horaAterrizajeIda, null, new { @class = "form-control", @placeholder = "", @id = "boleto_horaDespegueIda", @disabled = "disabled", @readonly = "readonly" })
                            </div>
                        </div>

                        <div>&nbsp;</div>


                        <div class="col-md-12" style="margin-top:10px;">
                            <div class="col-md-6">
                                <label>Fecha salida (VUELTA):</label>
                                @Html.TextBoxFor(m => m._fechaDespegueVuelta, null, new { @class = "form-control", @placeholder = "", @id = "boleto_fechaDespegueVuelta", @disabled = "disabled", @readonly = "readonly" })
                            </div>

                            <div class="col-md-6">
                                <label>Fecha llegada (VUELTA):</label>
                                @Html.TextBoxFor(m => m._fechaAterrizajeVuelta, null, new { @class = "form-control", @placeholder = "", @id = "boleto_fechaAterrizajeVuelta", @disabled = "disabled", @readonly = "readonly" })
                            </div>
                        </div>

                        <div>&nbsp;</div>

                        <div class="col-md-12" style="margin-top:10px;">

                            <div class="col-md-6">
                                <label>Hora salida (VUELTA):</label>
                                @Html.TextBoxFor(m => m._horaDespegueVuelta, null, new { @class = "form-control", @placeholder = "", @id = "boleto_horaDespegueVuelta", @disabled = "disabled", @readonly = "readonly" })
                            </div>

                            <div class="col-md-6">
                                <label>Hora llegada (VUELTA):</label>
                                @Html.TextBoxFor(m => m._horaAterrizajeVuelta, null, new { @class = "form-control", @placeholder = "", @id = "boleto_horaAterrizajeVuelta", @disabled = "disabled", @readonly = "readonly" })
                            </div>

                        </div>

                        <div>&nbsp;</div>

                        <div class="col-md-12" style="margin-top:10px;">

                            <div class="col-md-6">
                                <label>Monto:</label>
                                @Html.TextBoxFor(m => m._monto, null, new { @class = "form-control", @placeholder = "", @id = "boleto_monto", @disabled = "disabled", @readonly = "readonly" })
                            </div>

                            <div class="col-md-6">
                                <label>Tipo Boleto:</label>
                                @Html.TextBoxFor(m => m._tipoBoleto, null, new { @class = "form-control", @placeholder = "", @id = "boleto_tipoBoleto", @disabled = "disabled", @readonly = "readonly" })
                            </div>

                        </div>

                        <div class="col-md-12" style="margin-top:2px;">
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m._idReserva, null, new { @class = "form-control", @placeholder = "", @id = "id_reserva", @disabled = "disabled", @readonly = "readonly", style = "visibility:hidden" })
                            </div>
                            
                        </div>

                          
                            <div class="col-md-12" style="margin-top:10px;">
                                <button type="button" id="siguiente" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Siguiente</button>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $("#siguiente").click(function (e) {
            e.preventDefault();

            var identificador = document.getElementById("id_reserva").value;
            //alert(identificador);
            var url = '/gestion_boletos/M05_DetalleBoletoReserva';
            var method = 'GET';
            var data = { id_reserva : identificador};

            $.ajax(
                {
                    url: url,
                    type: method,
                    data: data,
                    success: function (data, textStatus, jqXHR) {

                        $("#contenido").empty();
                        $("#contenido").append(data);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });
        });
    </script>
}
