        } else if (sel.value == "no") {

            $("#m05CrearBoleto").click(function (e) {
                e.preventDefault();
                var url = '/gestion_boletos/M05_CrearBoleto';
                var method = 'GET';
                var data = '';

                $.ajax(
                    {
                        url: url,
                        type: method,
                        data: data,
                        success: function (data, textStatus, jqXHR) {

                            $("#contenido").empty();
                            $("#contenido").append(data);
                        },
