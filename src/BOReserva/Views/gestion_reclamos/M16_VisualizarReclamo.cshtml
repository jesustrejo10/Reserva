

<div class="row">
    <link rel="stylesheet" href="~/Content/plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Reclamos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Título</th>
                            <th>Estado</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
{
    foreach (var item in Model)
    {
        <tr id="@item._id">
            <td>@item._fechaReclamo</td>
            <td>@item._tituloReclamo</td>
            <td>@item._estadoReclamo</td>
            <td>
                @*<a href="#"> <i class="fa fa-eye clasedeprueba"></i></a>*@
                <a href="#" title="Ver detalle"><i class="fa fa-eye detalle"></i></a>
                @if (item._usuario == item._usuario) 
                { 
                <a href="#" title="Modificar"><i class="fa fa-pencil modificar"></i></a>
                <a href="#" title="Eliminar"><i class="fa fa-times eliminar"></i></a>
                }

            </td>

            <script>
                $(".activar").click(function (event) {
                    console.log("hola");
                    event.preventDefault();
                    event.stopPropagation();
                    event.stopImmediatePropagation();
                    var identificador = $(this).parent().parent().parent().attr("id");
                    jQuery.ajax({
                        type: "POST",
                        url: "/gestion_aviones/habilitarAvion",
                        data: { id: identificador }
                    }).done(function (data) {
                        var url = '/gestion_aviones/M02_VisualizarAviones';
                        var method = 'GET';
                        var data = '';
                        $.ajax(
                            {
                                url: url,
                                type: method,
                                data: data,
                                success: function (data, textStatus, jqXHR) {

                                    $("#contenido").empty();
                                    $("#contenido").append(data);
                                },
                                error: function (jqXHR, textStatus, errorThrown) {
                                    alert(errorThrown);
                                }
                            });
                    }).fail(function () {
                        alert("Error en la base de datos");
                    });
                });

                $(".desactivar").click(function (event) {
                    console.log("hola");
                    event.preventDefault();
                    event.stopPropagation();
                    event.stopImmediatePropagation();
                    var identificador = $(this).parent().parent().parent().attr("id");
                    jQuery.ajax({
                        type: "POST",
                        url: "/gestion_aviones/deshabilitarAvion",
                        data: { id: identificador }
                    }).done(function (data) {
                        var url = '/gestion_aviones/M02_VisualizarAviones';
                        var method = 'GET';
                        var data = '';
                        $.ajax(
                            {
                                url: url,
                                type: method,
                                data: data,
                                success: function (data, textStatus, jqXHR) {

                                    $("#contenido").empty();
                                    $("#contenido").append(data);
                                },
                                error: function (jqXHR, textStatus, errorThrown) {
                                    alert(errorThrown);
                                }
                            });
                    }).fail(function () {
                        alert("Error en la base de datos");
                    });
                });

                $(".modificar").click(function (event) {
                    event.preventDefault();
                    event.stopPropagation();
                    event.stopImmediatePropagation();
                    var identificador = $(this).parent().parent().parent().attr("id");
                    jQuery.ajax({
                        type: "GET",
                        url: "/gestion_reclamos/M16_ModificarReclamo",
                        data: { id: identificador }
                    }).done(function (data) {
                        $("#contenido").empty();
                        $("#contenido").append(data);
                    }).fail(function () {
                        alert(data);
                    });


                });

                $(".eliminar").click(function (event) {
                    event.preventDefault();
                    event.stopPropagation();
                    event.stopImmediatePropagation();
                    var identificador = $(this).parent().parent().parent().attr("id");
                    jQuery.ajax({
                        type: "POST",
                        url: "/gestion_aviones/eliminarAvion",
                        data: { id: identificador }
                    }).done(function (data) {
                        var url = '/gestion_aviones/M02_VisualizarAviones';
                        var method = 'GET';
                        var data = '';
                        $.ajax(
                            {
                                url: url,
                                type: method,
                                data: data,
                                success: function (data, textStatus, jqXHR) {

                                    $("#contenido").empty();
                                    $("#contenido").append(data);
                                },
                                error: function (jqXHR, textStatus, errorThrown) {
                                    alert(errorThrown);
                                }
                            });
                    }).fail(function (data) {
                        alert(data);
                    });


                });
            </script>

        </tr>
    }
}
catch
{
                            <script>
                                alert("Error en el listado, por favor intente acceder nuevamente");
                            </script>
                        }

                    <tfoot>
                        <tr>
                            <th>Fecha</th>
                            <th>Título</th>
                            <th>Estado</th>
                            <th>Opciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

<script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/plugins/datatables/dataTables.bootstrap.min.js"></script>

<script language="javascript" type="text/javascript">

    table = $('#example1').DataTable();

</script>
