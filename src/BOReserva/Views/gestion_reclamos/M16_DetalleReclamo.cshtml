
@model BOReserva.Models.gestion_reclamos.CModificarReclamo

<script src="~/Scripts/Scripts_Aviones/llamadas_generales.js"></script>

@using (Html.BeginForm("detalleReclamo", "gestion_reclamos", null, FormMethod.Post, new { @id = "formDetalleReclamo", @class = "form-horizontal" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <h2 class="box-title"> Consultar Reclamo</h2>
                    <div class="row">
                        <div class="col-md-12">
                            <div>
                                &nbsp;
                                <div class="col-md-12">                                
                                    <div class="col-xs-6">
                                        <label for="tituloReclamo">T&iacutetulo </label>
                                        @Html.TextBoxFor(m => m._tituloReclamo, null, new { @class = "form-control", @id = "tituloReclamo", @readonly = "readonly" })
                                    </div>
                                    <div class="col-xs-6">
                                        <label for="fecharegistro">Fecha del Suceso  </label>
                                        @Html.TextBoxFor(m => m._fechaReclamo, null, new { @class = "form-control", @id = "fechaReclamo", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div>
                                &nbsp;
                              <div class="col-md-12">
                                <div class="col-xs-6">
                                    <label for="detalleReclamo">Descripci&oacuten </label>
                                    @Html.TextAreaFor(m => m._detalleReclamo, 3, 3, new { @class = "form-control", @id = "detalleReclamo", @readonly = "readonly" })
                                </div>
                              </div>
                            </div>

                            <div>&nbsp;</div>
                            <div class="col-md-12" style="margin-top:10px;"></div>
                            <div>&nbsp;</div>
                            <div class="col-md-12" style="margin-top:10px;">
                                <button type="submit" id="regresar" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Regresar</button>
                            </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
 </div>


    <script>
        $("#regresar").click(function (e) {
            e.preventDefault();
            alert("entro aquí en el regresar")
            var url = '/gestion_reclamos/M16_VisualizarReclamo';
            var method = 'GET';
            var data = '';
            alert("Se esta procesando tu solicitud, por favor espere");
            $.ajax(
                {
                    url: url,
                    type: method,
                    data: data,
                    success: function (data, textStatus, jqXHR) {
                        $("#contenido").empty();
                        $("#contenido").append(data);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });
        });
    </script>
}
<!------------------- FIN DE SECCION DE VER RECLAMO A DETALLE---------------->
