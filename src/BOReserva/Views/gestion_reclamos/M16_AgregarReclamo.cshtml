@model BOReserva.Models.gestion_reclamos.CAgregarReclamo

 <!---------------------- SECCION DE AGREGAR RECLAMO---------------->
@using (Html.BeginForm("guardarAvion", "gestion_aviones", null, FormMethod.Post, new { @id = "formGuardarAvion", @class = "form-horizontal" }))
{

    <div class="row">
        <div class="col-md-12">
            <div class="box">

                <div class="box-body">
                    <h2 class="box-title"> Agregar Reclamo</h2>
                    <div class="row">
                        <div class="col-md-12">
                            <div>
                                &nbsp;
                                <div class="col-md-12">
                                    <div class="col-xs-6">
                                        <label for="tituloReclamo">T&iacutetulo (<span style="color:red">*</span>):</label>
                                        @Html.TextBoxFor(m => m._tituloReclamo, null, new { @class = "form-control", @placeholder = "Reclamo de una maleta", @id = "tituloReclamo" })

                                    </div>
                                    <div class="col-xs-6">
                                        <label for="fecharegistro">Fecha del Suceso (<span style="color:red">*</span>)</label>
                                        @Html.TextBoxFor(m => m._fechaReclamo, null, new { @type = "date", @class = "form-control", @placeholder = "Fecha del Suceso", @id = "fechaReclamo", min = "2001-01-01", max = "2016-12-31", @onblur = "checkanio(this);" })
                                     </div>
                                </div>
                                
                                &nbsp;

                                <div class="col-md-12">
                                    <div class="col-xs-6">
                                        <label for="descripcionReclamo">Descripci&oacuten (<span style="color:red">*</span>):</label>
                                        @Html.TextAreaFor(m => m._detalleReclamo, 3, 3, new { @class = "form-control", @placeholder = "Escriba aquí el detalle del reclamo...", @id = "detalleReclamo" })
                                    </div>
                                </div>
                            </div>
                         </div>
                                             
                       <div class="col-md-12" style="margin-top:10px;">
                          <button type="button" id="aceptarAvion" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Guardar</button>
                       </div>
                     </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
    </div>
    <!-- /.row -->

   
}
<!------------------- FIN DE SECCION DE AGREGAR RECLAMO ---------------->
