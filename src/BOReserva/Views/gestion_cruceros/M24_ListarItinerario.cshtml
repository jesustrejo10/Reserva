
<div class="row">
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"><b>Lista de Itinerario</b></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Crucero</th>
                            <th><b>Ruta</b></th>
                            <th><b>Fecha Inicio</b></th>
                            <th><b>Fecha Fin</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (var itinerario in Model.itinerarios)
                            {
                                <tr id="@itinerario._fechaInicio">
                                    <td>@itinerario._crucero </td>
                                    <td>@itinerario._ItinerarioCrucero </td>
                                    <td>@itinerario._fechaInicio </td>
                                    <td>@itinerario._fechaFin </td>
                                </tr>

                            }
                        }
                        catch
                        {

                        }

                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>

<script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/plugins/datatables/dataTables.bootstrap.min.js"></script>

<script language="javascript" type="text/javascript">
    table = $('#example1').DataTable();
</script>

<script>
    $(".cambioItinerario").click(function (e) {
        e.preventDefault();
        var fechaInicio = $(this).closest('tr').attr('id');
        var fkCrucero = $(this).closest('tr').attr('id');
        var fkRuta = $(this).closest('tr').attr('id');
        console.log("crucero");
        console.log(fkCrucero);
        $.ajax({
            url: "gestion_cruceros/cambiarEstatusItinerario",
            data: {
                fecha_inicio: fechaInicio,
                fk_crucero: fkCrucero,
                fk_ruta: fkRuta
            },
            type: 'POST',
            success: function (data) {
                $.ajax({
                    url: '/gestion_cruceros/M24_ListarItinerarios',
                    type: 'GET',
                    data: '',
                    success: function (data, textStatus, jqXHR) {
                        $("#contenido").empty();
                        $("#contenido").append(data);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });
            },
            error: function (data) {
                console.log(data);
            }
        });
    });
</script>
