@model BOReserva.Models.gestion_hoteles.cGestionHoteles_CrearHotel

<script src="~/Scripts/Scripts_Aviones/llamadas_generales_hoteles.js"></script>

@using (Html.BeginForm("crearhotel", "gestion_hoteles", null, FormMethod.Post, new { @id = "formCrearHotel", @class = "form-horizontal" }))
{

   <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Registro de Hotel</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                                Nombre
                                @Html.TextBoxFor(m => m._nombre, null, new { @class = "form-control", @placeholder = "Introduzca Nombre", @id = "nombreHotel" })      
                            </div>
                        <div class="form-group">
                            <label>Dirección</label>
                            @Html.TextBoxFor(m => m._direccion, null, new { @class = "form-control", @placeholder = "Introduzca Dirección", @id = "direccionHotel" })
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-xs-6">
                                    <!-- select -->
                                    <div class="form-group">
                                        <label>Clasificación</label>
                                        <select class="form-control">
                                            <option>1 Estrella</option>
                                            <option>2 Estrellas</option>
                                            <option>3 Estrellas</option>
                                            <option>4 Estrellas</option>
                                            <option>5 Estrellas</option>
                                        </select>
                                    </div>
                                </div><!--div col-xs-->
                                <div class="col-xs-6">
                                    <div class="form-group">
                                       <!-- <label for="Puntuacion">Puntuación</label>-->
                                        <!--<input type="clasificacion" class="form-control" id="puntuacionHotel" placeholder="Rate">-->
                                    </div>
                                </div>
                            </div> <!--/div row-->
                        </div> <!--/div box-body-->
                        <div class="form-group">
                            <label for="pagina">Página Web</label>
                            @Html.TextBoxFor(m => m._paginaWeb, null, new { @class = "form-control", @placeholder = "Introduzca Página Web", @id = "paginaHotel" })
                        </div>
                        <div class="form-group">
                            <label for="pagina">Correo Electrónico</label>
                            @Html.TextBoxFor(m => m._email, null, new { @class = "form-control", @placeholder = "Introduzca correo electrónico del hotel", @id = "correoHotel" })
                        </div>                       
                        
                    </div>

                    <!-- /.box-body -->
                    <div class="box-footer">

                        <div class="pull-right">
                            <button type="submit" class="btn btn-success">Enviar</button>
                            <button type="button" class="btn btn-danger">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}