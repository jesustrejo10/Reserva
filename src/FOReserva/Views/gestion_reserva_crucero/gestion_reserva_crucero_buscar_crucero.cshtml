@model  List<FOReserva.Models.Cruceros.CReserva_Cruceros>

    @{
        ViewBag.Title = "Buscar Crucero";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
@{ 
    if (Model == null)
{
        <center>
    <h1><i class="fa fa-exclamation-circle orange" aria-hidden="true"></i> Lo sentimos, ha habido un problema con la conexión!</h1>
              <h2>Revise su conexión e intente de nuevo</h2>
            <div class="row" style="margin-top: 20px;">
                <div class="col-md-12 text-center">
                    <a id="volver" href="javascript:history.back(1)" class="btn btn-primary">Volver</a>
                </div>
            </div>
</center>

    }
    else
if (Model.Count() == 0)
{
    <div class="row">
        <center>
            <h1><i class="fa fa-exclamation-circle orange" aria-hidden="true"></i> Lo sentimos, su búsqueda no arrojó resultados</h1>
            <div class="row" style="margin-top: 20px;">
                <div class="col-md-12 text-center">
                    <a id="volver" href="javascript:history.back(1)" class="btn btn-primary">Volver</a>
                </div>
            </div>
        </center>
        
    </div>
}
else
{
      foreach (var item in Model) {
        <!-- FEATURED GRID -->
           using (Html.BeginForm("gestion_reserva_crucero_resultado_crucero", "gestion_reserva_crucero", null, FormMethod.Post, new { @id = "formBuscarCruceros", @class = "form-horizontal" }))
{

                <div class="row">
                    <ul class="shop-item-list row list-inline nomargin">

                        <!-- ITEM -->
                        <li class="col-lg-12">
                          
                            <div class="shop-item clearfix">



                                <div class="shop-item-summary ">
                                    <h2>@item._crucero - De @item._origen a @item._destino</h2>

                                    <p text-justify>

                                        <span><strong>Salidas:</strong></span> <br>
                                        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                                        <span><strong>Fecha Salida:</strong> @item._fecha_inicio    > <strong>Fecha Llegada:</strong> @item._fecha_fin</span>
                                        <br>
                                        <br>
                                    </p>
                                    <!-- price -->
                                    <!-- /price -->
                                    <!-- buttons -->
                                    <!-- /buttons -->
                                    <input type="hidden" name="id_crucero" id="id_crucero" value="@item._crucero" />
                                    <input type="hidden" name="id_origen" id="id_origen" value="@item._origen" />
                                    <input type="hidden" name="id_destino" id="id_destino" value="@item._destino" />
                                    <input type="hidden" name="id_inicio" id="id_inicio" value="@item._fecha_inicio" />
                                    <input type="hidden" name="id_fin" id="id_fin" value="@item._fecha_fin" />
                                     <input type="hidden" name="fk_ruta" id="fk_ruta" value="@item._fk_ruta" />
                                     <input type="hidden" name="fk_crucero" id="fk_crucero" value="@item._fk_crucero" />

                                </div>
                                <div class="shop-item-buttons text-right">
                                    <br>
                                    <button type="submit" id="buscarCrucero" class="btn btn-primary">RESERVAR</button>


                                </div>
                            </div>  

                        </li>
                        </ul>
</div>
                }
           }
}
           }




