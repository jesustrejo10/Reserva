@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- FEATURED GRID -->
<!-- PETAÑAS CON FORMULARIO DE BÚSQUEDA PARA CADA TIPO DE RESERVA -->
<div class="row contenedor">
    <!-- SECCIÓN DE PESTAÑAS -->
    <ul class="nav nav-tabs">
        <li class="active" id="LiVuelos"><a href="">Vuelos</a></li>
        <li id="LiAutos"><a href="">Autos</a></li>
        <li id="LiHoteles"><a onclick="cargarContenido('#MD', 'get', '/gestion_reserva_habitaciones/buscar_hoteles', null, this)" href="">Hoteles</a></li>
        <li id="LiRestaurantes"><a href="">Restaurantes</a></li>
        <li id="LiCruceros"><a href="">Cruceros</a></li>
        <li id="LiDiarios"><a href="">Diarios de Viaje</a></li>

    </ul>

    <!-- SECCIÓN A CAMBIAR POR CADA MODULO -->
    <div class="panel panel-default col-sm-6">
        <div class="panel-body">
            <div id="contenedor">
                <div class="heading-title">
                    <h3><span>Vuelos</span></h3>
                </div>

                <form class="validate" method="post" enctype="multipart/form-data" data-success="Sent! Thank you!" data-toastr-position="top-right">
                    <fieldset>
                        <!-- required [php action request] -->
                        <input type="hidden" name="action" value="contact_send" />

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6">
                                    <label>Origen</label>
                                    <input type="text" name="contact[first_name]" value="" class="form-control required">
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <label>Destino</label>
                                    <input type="text" name="contact[last_name]" value="" class="form-control required">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6">
                                    <label>Fecha ida</label>
                                    <input type="text" name="contact[start_date]" value="" class="form-control datepicker required" data-format="yyyy-mm-dd" data-lang="en" data-rtl="false">
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <label>Fecha vuelta</label>
                                    <input type="text" name="contact[start_date]" value="" class="form-control datepicker required" data-format="yyyy-mm-dd" data-lang="en" data-rtl="false">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-4 col-sm-4">
                                    <label>Adultos</label>
                                    <select name="contact[position]" class="form-control pointer required">
                                        <option value="">--- Seleccionar ---</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <label>Niños</label>
                                    <select name="contact[position]" class="form-control pointer required">
                                        <option value="">--- Seleccionar ---</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <label>Bebes</label>
                                    <select name="contact[position]" class="form-control pointer required">
                                        <option value="">--- Seleccionar ---</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                    </fieldset>

                    <div class="row text-center">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-primary">Buscar</button>
                        </div>
                    </div>

                </form>
            </div>

        </div>
    </div>

    <!-- SECCIÓN DE IMAGENES. DEBEN SER DE 577 X 268 PIXELES -->
    <div class="col-sm-6">
        <div id="contenedorImagenes">
            <div class="relative">

                <img src="@Url.Content("~/Content/assets/images/demo/shop/home/man_cat.jpg")" alt="" />
                <div class="absolute text-left">
                    <h2> - CLASE EJECUTIVA -</h2>
                    <p>
                        SELECCIONA LA DE TU PREFERENCIA !!!
                    </p>

